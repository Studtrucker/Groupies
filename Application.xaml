<Application x:Class="Application"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Skischule"
             xmlns:en="clr-namespace:Skischule.Entities"
             StartupUri="MainWindow.xaml"
             Startup="Skikurs_Startup">
    
    <Application.Resources>
        
        <LinearGradientBrush x:Key="DefaultImageBrush" StartPoint="0 0" EndPoint="0 1">
            <GradientStop Offset="0" Color="White"/>
            <GradientStop Offset="0.6" Color="LightGray"/>
            <GradientStop Offset="1.5" Color="DarkGray"/>
        </LinearGradientBrush>
        
        <DataTemplate x:Key="KleineGruppe" DataType="{x:Type en:TeilnehmerCollection}">
            <DataGrid FontSize="48"/>
        </DataTemplate>
        <DataTemplate x:Key="NormaleGruppe" DataType="{x:Type en:TeilnehmerCollection}">
            <DataGrid FontSize="36"/>
        </DataTemplate>
        <DataTemplate x:Key="GrosseGruppe" DataType="{x:Type en:TeilnehmerCollection}">
            <DataGrid FontSize="24"/>
        </DataTemplate>

        <Style TargetType="DataGrid" x:Key="KleineGruppeStyle" >
            <Setter Property="FontSize" Value="48"/>
        </Style>
        <Style TargetType="DataGrid" x:Key="NormaleGruppeStyle" >
            <Setter Property="FontSize" Value="36"/>
        </Style>
        <Style  TargetType="DataGrid"  x:Key="GrosseGruppeStyle" >
            <Setter Property="FontSize" Value="24"/>
        </Style>
        
    </Application.Resources>
</Application>
