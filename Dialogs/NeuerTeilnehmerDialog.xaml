<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Groupies"
        xmlns:cmd="clr-namespace:Groupies.Commands"
        xmlns:rules="clr-namespace:Groupies.ValidationRules"
        xmlns:Converters="clr-namespace:Groupies.Converters" x:Class="NeuerTeilnehmerDialog"
        mc:Ignorable="d"
        Loaded="HandleWindowLoaded"
        Title="Teilnehmer" SizeToContent="Height" Width="600"
        Validation.ValidationAdornerSite="{Binding ElementName=FehlerInfo}">


    <Window.Resources>
        <Converters:StringToLeistungsstufeConverter x:Key="StringToLeistungsstufeConverter"/>
    </Window.Resources>


    <Window.BindingGroup>
        <BindingGroup >
            <BindingGroup.ValidationRules >
                <!--<rules:TeilnehmerValidationRule ValidationStep="ConvertedProposedValue"/>-->
                <rules:TeilnehmerValidationRule />
            </BindingGroup.ValidationRules>
        </BindingGroup>
    </Window.BindingGroup>

    <DockPanel>
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-konferenz-vordergrund-ausgewaehlte-48.png"
                   Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto" Text="Neuer Teilnehmer" 
                       Style="{StaticResource WindowCaption}" />
        </DockPanel>

        <!--OK- und Cancel-Button-->
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="FehlerInfo" FontSize="6" 
                       Content="{Binding (Validation.ValidationAdornerSiteFor).(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" />
                <Button Width="100" Content="OK" Command="{x:Static cmd:SkiclubCommands.DialogOk}"/>
                <Button Width="100" Content="Abbruch" Command="{x:Static cmd:SkiclubCommands.DialogCancel}"/>
            </StackPanel>
        </Border>

        <!--Inputfields-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock ><Run Text="Vorname "/><Run Foreground="Red" Text="*"/></TextBlock>
            </Label>
            <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock ><Run Text="Nachname "/><Run Foreground="Red" Text="*"/></TextBlock>
            </Label>
            <Label Content="Geburtsdatum" Grid.Column="1" Grid.Row="3" />
            <Label Grid.Column="1" Grid.Row="4">
                <TextBlock><Run Text="Persönliche Leistungsstufe"/></TextBlock>
            </Label>

            <TextBox x:Name="VornameText" Grid.Column="2" Grid.Row="1" 
                     Text="{Binding Vorname, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="NachnameText" Grid.Column="2" Grid.Row="2"
                     Text="{Binding Nachname, UpdateSourceTrigger=PropertyChanged}"/>

            <DatePicker Grid.Row="3" Grid.Column="2" SelectedDate="{Binding Geburtsdatum, UpdateSourceTrigger=PropertyChanged}" />

            <!--<ComboBox Grid.Column="2" Grid.Row="4"     
                      IsSynchronizedWithCurrentItem="True"
                      x:Name="LeistungsstandComboBox" 
                      />-->

            <ComboBox Grid.Column="2" Grid.Row="4"     
                      IsSynchronizedWithCurrentItem="True"
                      x:Name="LeistungsstandComboBox"
                      SelectedValue="{Binding Leistungsstand, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource StringToLeistungsstufeConverter}}"/>
                      <!--SelectedValue="{Binding Leistungsstand, UpdateSourceTrigger=PropertyChanged}"/>-->

        </Grid>

    </DockPanel>

</Window>
