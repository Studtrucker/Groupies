    <Window.BindingGroup>
        <BindingGroup >
            <BindingGroup.ValidationRules>
                <rules:TeilnehmerValidationRule/>
            </BindingGroup.ValidationRules>
        </BindingGroup>
    </Window.BindingGroup>

    <DockPanel>
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-konferenz-vordergrund-ausgewaehlte-48.png"
                   Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto" Text="Neuer Teilnehmer" 
                       Style="{StaticResource WindowCaption}" />
        </DockPanel>

         <!--OK- und Cancel-Button--> 
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Name="FehlerInfo" FontSize="6" 
                       Content="{Binding RelativeSource={RelativeSource Self}, 
                    Path=(Validation.ValidationAdornerSiteFor).(Validation.Errors)[0].ErrorContent}" />
                <Button Width="100" Content="OK" Command="{x:Static cmd:SkiclubCommands.DialogOk}"/>
                <Button Width="100" Content="Abbruch" Command="{x:Static cmd:SkiclubCommands.DialogCancel}"/>
            </StackPanel>
        </Border>

        <!--Inputfields-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition }"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition }"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock >Vorname
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>
            <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock >Nachname
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>
            <Label Content="Geburtsdatum" Grid.Column="1" Grid.Row="3" />
            <Label Grid.Column="1" Grid.Row="4">
                <TextBlock>               
                    Persönliche  Leistungsstufe
                </TextBlock>
            </Label>

            <TextBox x:Name="VornameText" Grid.Column="2" Grid.Row="1" 
                     Text="{Binding Vorname, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="NachnameText" Grid.Column="2" Grid.Row="2"
                     Text="{Binding Nachname, UpdateSourceTrigger=PropertyChanged}"/>
            
            <DatePicker Grid.Row="3" Grid.Column="2" SelectedDate="{Binding Geburtsdatum,UpdateSourceTrigger=PropertyChanged}" />

            <ComboBox Grid.Column="2" Grid.Row="4"     
                        IsSynchronizedWithCurrentItem="True"
                        SelectedValuePath="Benennung"
                        SelectedItem="{Binding Path=Leistungsstand, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValue="{Binding Path=Leistungsstand, UpdateSourceTrigger=PropertyChanged}"
                        Name="ParticipantLevelComboBox" />

        </Grid>

    </DockPanel>

</Window>
