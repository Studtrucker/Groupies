<Window x:Class="NewGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skischule"
        xmlns:rules="clr-namespace:Skischule.ValidationRules"
        mc:Ignorable="d"
        Title="NeueGruppeDialog"  Width="600" SizeToContent="Height">
    <DockPanel>
        
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-konferenz-vordergrund-ausgewaehlte-48.png"
                   Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto" Text="Neuer Skikursgruppe"
                       Style="{StaticResource WindowCaption}" />
        </DockPanel>

        <!-- OK- und Cancel-Button -->
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="100" Content="OK" Command="{x:Static local:SkiclubCommands.DialogOk}"/>
                <Button Width="100" Content="Abbruch" Command="{x:Static local:SkiclubCommands.DialogCancel}"/>
            </StackPanel>
        </Border>

        <!--Inputfields-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" Grid.Row="1">
                <TextBlock Style="{StaticResource RequiredField}">Print Gruppenname
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>
            <TextBox Text="{Binding GroupPrintName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                x:Name="GroupPrintNameField" Grid.Column="2" Grid.Row="1"/>
            <Label Content="Gruppenname" 
                   Grid.Column="1" Grid.Row="2"/>
            <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     Grid.Column="2" Grid.Row="2" />
            <Label Content="Gruppenlevel" 
                   Grid.Column="1" Grid.Row="3"/>
            <!--<TextBox Text="{Binding Grouplevel, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     Grid.Column="2" Grid.Row="3"/>-->
            <ComboBox x:Name="GroupLevelCombobox" Grid.Column="2" Grid.Row="3"
                      DisplayMemberPath="LevelName"
                      SelectedItem="{Binding Path=Grouplevel, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="Grouplevel" />
            <Label Content="Skilehrer" 
                   Grid.Column="1" Grid.Row="4"/>
            <!--<TextBox Text="{Binding Groupleader, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                     Grid.Column="2" Grid.Row="4"/>-->
            <ComboBox x:Name="IntructorCombobox" Grid.Column="2" Grid.Row="4"
                      DisplayMemberPath="Fullname"
                      SelectedItem="{Binding Path=Groupleader, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="PrintName" />

        </Grid>
    </DockPanel>
</Window>
