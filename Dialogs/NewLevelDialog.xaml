<Window x:Class="NewLevelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skischule"
        xmlns:rules="clr-namespace:Skischule.ValidationRules"
        mc:Ignorable="d"
        Title="Neues Level" SizeToContent="Height" Width="600">
    
    <DockPanel>
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-treppe-rauf-48.png" Height="32" Width="48" Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto"  Margin="10" Style="{StaticResource WindowCaption}">
                <TextBlock.Text>Neues Level</TextBlock.Text>
            </TextBlock>
        </DockPanel>
        
        <!-- OK- und Cancel-Button -->
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="100" Content="OK"  Click="HandleButtonOKClick"/>
                <Button Width="100" Content="Abbruch" Click="HandleButtonCancelClick"/>
            </StackPanel>
        </Border>

        <!--Eingabefelder-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Label Canvas.Left="150" Canvas.Top="29" Grid.Column="1" Grid.Row="1">
                <TextBlock Height="16" Margin="0">Benennung
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>
            <TextBox x:Name="txtBenennung" Grid.Column="2" Grid.Row="1">
                <!-- Binding kann im Code im Loaded-Event des Windows gemacht werden -->
                <Binding Path="Benennung" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                    <rules:NameValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Label Content="Beschreibung" Grid.Column="1" Grid.Row="2"/>
            <TextBox  Text="{Binding Beschreibung}" Grid.Column="2" Grid.Row="2"/>

        </Grid>
    </DockPanel>
</Window>
