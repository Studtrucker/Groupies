<Window x:Class="TeilnehmerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Groupies"
        xmlns:rules="clr-namespace:Groupies.ValidationRules"
        xmlns:converters="clr-namespace:Groupies.Converters"
        mc:Ignorable="d"
        Title="TeilnehmerDialog" SizeToContent="Height" Width="800">

    <Window.Resources>
        <converters:StringToLeistungsstufeConverter x:Key="StringToLeistungsstufeConverter"/>
    </Window.Resources>


    <Window.BindingGroup>
        <BindingGroup >
            <BindingGroup.ValidationRules >
                <rules:TeilnehmerValidationRule/>
            </BindingGroup.ValidationRules>
        </BindingGroup>
    </Window.BindingGroup>

    <DockPanel>
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-person-48.png"
                   Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto" Text="Teilnehmer" x:Name="Titel"
                       Style="{StaticResource WindowCaption}" />
        </DockPanel>

        <!--OK- und Cancel-Button-->
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="FehlerInfoLabel" Content="{Binding (Validation.ValidationAdornerSiteFor).(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" />
                <Button x:Name="OkButton" Width="100" Content="OK"  Click="OkButton_Click" />
                <Button x:Name="CancelButton" Width="100" Content="Abbruch" Click="CancelButton_Click"/>
            </StackPanel>
        </Border>

        <!--Inputfields-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock>Vorname <Run Foreground="Red">*</Run></TextBlock>
            </Label>
            <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock>Nachname <Run Foreground="Red">*</Run></TextBlock>
            </Label>
            <Label Content="Geburtsdatum" Grid.Column="1" Grid.Row="3"/>
            <Label Grid.Column="1" Grid.Row="4" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock>Leistungsstand <Run Foreground="Red">*</Run></TextBlock>
            </Label>

            <TextBox x:Name="VornameTextBox" Grid.Column="2" Grid.Row="1" 
                     Text="{Binding Vorname, UpdateSourceTrigger=Explicit}"/>
            <TextBox x:Name="NachnameTextBox" Grid.Column="2" Grid.Row="2"
                     Text="{Binding Nachname, UpdateSourceTrigger=Explicit}"/>

            <DatePicker x:Name="GeburtstagDatePicker" Grid.Row="3" Grid.Column="2" 
                        SelectedDate="{Binding Geburtsdatum, UpdateSourceTrigger=Explicit}"/>

            <ComboBox Grid.Column="2" Grid.Row="4" IsSynchronizedWithCurrentItem="True"
                      x:Name="LeistungsstandComboBox"
                      SelectedValue="{Binding Leistungsstand, UpdateSourceTrigger=Explicit,Converter={StaticResource StringToLeistungsstufeConverter}}"/>

        </Grid>


    </DockPanel>

</Window>
