<Window x:Class="TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Groupies"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="LeistungsstufenListeSource" Source="{Binding GetLeistungsstufenListe}" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <!--<RowDefinition/>-->
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="GruppenlisteDataGrid" Grid.Row="0"
                  ItemsSource="{Binding  AlleGruppen}"  
                  SelectedItem="{Binding SelectedGruppe}"                             
                  DisplayMemberPath="Benennung" 
                  IsReadOnly="False" DockPanel.Dock="Bottom"
                  Margin="6"  Foreground="Black" 
                  AutoGenerateColumns="False" SelectionMode="Single">
          
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sort"  Binding="{Binding Sortierung}" Width="Auto" />
                <DataGridTextColumn Header="Benennung"  Binding="{Binding Benennung}" Width="Auto" />
                <DataGridTextColumn Header="Anz"  Binding="{Binding Mitgliederliste.Count}" SortMemberPath="Mitgliederliste.Count" Width="Auto" />
                <DataGridTextColumn Header="SortStufe"  Binding="{Binding LeistungsstufeID}" SortMemberPath="Leistungsstufe.Sortierung" Width="Auto" />
                <DataGridTextColumn Header="Stufe"    
                                    Binding="{Binding Leistungsstufe.Benennung}" SortMemberPath="Leistungsstufe.Benennung" Width="Auto" />
                <DataGridComboBoxColumn Header="StufeDD" Width="*" 
                                        ItemsSource="{Binding Source={StaticResource LeistungsstufenListeSource}}"
                                        DisplayMemberPath="Benennung"
                                        SelectedValuePath="Ident"
                                        SelectedValueBinding="{Binding LeistungsstufeID, Mode=TwoWay}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--<DataGrid ItemsSource="{Binding LeistungsstufenListe}" Grid.Row="1"/>-->
    </Grid>
</Window>
