<UserControl x:Class="UserControls.GruppendetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:rules="clr-namespace:Groupies.ValidationRules"
             
             xmlns:Converters="clr-namespace:Groupies.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:cmd="clr-namespace:Groupies.Commands"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             Width="Auto" Height="Auto">


    <UserControl.Resources>
        <Converters:StringToLeistungsstufeConverter x:Key="StringToLeistungsstufeConverter"/>
    </UserControl.Resources>
    
    <Border BorderBrush="Black" BorderThickness="1"  Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="DarkGray"/>
        </Border.Effect>
        <Grid x:Name="gridSkikursdetails" Background="white" Panel.ZIndex="1" >
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{x:Static cmd:SkiclubCommands.TeilnehmerSuchen}"/>
                </ContextMenu>
            </Grid.ContextMenu>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Detailangaben -->
            <Grid Grid.Row="1" Margin="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="1" Grid.Row="1" Content="Sortierung für Gruppenliste" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="2" Content="Gruppenname in Teilnehmerinfo" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="3" Content="Gruppenname in Trainerinfo" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="4" Content="Leistungsstufe" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="5" Content="Trainer" Margin="2"/>
                <StackPanel Grid.Column="1" Grid.Row="6">
                    <Label Grid.Column="1" Grid.Row="6" Content="Mitgliederliste" Margin="2"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Anzahl Mitglieder"/>
                        <Label Grid.Column="1" Content="{Binding SelectedGruppe.Mitgliederliste.Count, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  />
                    </Grid>
                </StackPanel>

                <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding SelectedGruppe.Sortierung, UpdateSourceTrigger=PropertyChanged}"  />
                <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding SelectedGruppe.AusgabeTeilnehmerinfo, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding SelectedGruppe.Benennung, UpdateSourceTrigger=PropertyChanged}"  />

                <ComboBox Grid.Column="2" Grid.Row="4" IsSynchronizedWithCurrentItem="True"
                      x:Name="GruppenleistungsstufeComboBox"
                      SelectedValue="{Binding SelectedGruppe.Leistungsstufe, Converter={StaticResource StringToLeistungsstufeConverter}}"/>


                <TextBox  Grid.Column="2" Grid.Row="5" x:Name="GroupLeaderTextblock"  
                          Text="{Binding SelectedGruppe.Trainer.VorUndNachname}"                         
                          MouseDoubleClick="Handle_TrainerAusGruppeEntfernen">

                        <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TrainerBearbeiten}" />
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TrainerAusGruppeEntfernen}" />
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
                
                <DataGrid Grid.Column="2" Grid.Row="6" x:Name="MitgliederlisteDataGrid" 
                          IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" 
                          IsReadOnly="False" CanUserAddRows="False" 
                          ItemsSource="{Binding SelectedGruppe.Mitgliederliste}" 
                          SelectionMode="Extended" MouseDoubleClick="Handle_TeilnehmerAusGruppeEntfernen">
                    

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TeilnehmerBearbeiten}" />
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TeilnehmerAusGruppeEntfernen}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Nachname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Alter" Binding="{Binding Alter, Mode=OneWay}"/>
                        <DataGridComboBoxColumn x:Name="TeilnehmerLeistungsstandComboBox" Header="Leistungsstand" Width="*" 
                                                SelectedValueBinding="{Binding Leistungsstand, Converter={StaticResource StringToLeistungsstufeConverter}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>

</UserControl>
