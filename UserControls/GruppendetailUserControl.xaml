<UserControl x:Class="UserControls.GruppendetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:rules="clr-namespace:Groupies.ValidationRules"
             xmlns:ViewModels="clr-namespace:Groupies.ViewModels"
             xmlns:Converters="clr-namespace:Groupies.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:cmd="clr-namespace:Groupies.Commands"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:Groupies.Behaviors"
             xmlns:generation4="clr-namespace:Groupies.Entities.Generation4" d:DataContext="{d:DesignInstance Type=generation4:Teilnehmer}"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">

    <UserControl.Resources>
        <CollectionViewSource x:Key="LeistungsstufenListeSource" Source="{Binding LeistungsstufenListe}" />
        <Converters:InvertableBoolToVisibleConverter x:Key="BooleanToVisibilityInverted"/>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding UserControlLoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border BorderBrush="Black" BorderThickness="1"  Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="DarkGray"/>
        </Border.Effect>
        <Grid x:Name="gridSkikursdetails" Background="white" Panel.ZIndex="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Detailangaben -->
            <Grid Grid.Row="1" Margin="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition MinHeight="250" Height="Auto"/>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                </Grid.RowDefinitions>
                
                
                <Label Grid.Column="1" Grid.Row="1" Content="Sortierung" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="2" Content="Gruppenname" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="4" Content="Leistungsstufe" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="5" Content="Trainer" Margin="2"/>
                
                <StackPanel Grid.Column="1" Grid.Row="7">
                    <Label Content="Mitgliederliste" Margin="2"/>
                    <Grid HorizontalAlignment="Center">
                        <TextBlock Grid.Row="0"  Text="{Binding Mitgliederliste.Count, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" FontSize="35"/>
                    </Grid>
                </StackPanel>

                <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding Sortierung, UpdateSourceTrigger=PropertyChanged}"  />
                <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding Benennung, UpdateSourceTrigger=PropertyChanged}"  />
                <!--<TextBox Grid.Column="2" Grid.Row="3" Text="{Binding LeistungsstufeID, UpdateSourceTrigger=PropertyChanged}"/>-->

                <ComboBox Grid.Column="2" Grid.Row="4" x:Name="GruppenleistungsstufeComboBox"
                          SelectedValue="{Binding LeistungsstufeID, Mode=TwoWay}"
                          SelectedValuePath="Ident"
                          DisplayMemberPath="Benennung" 
                          IsReadOnly="True">
                    
                    <ComboBox.ItemsSource>
                        <CompositeCollection>
                            <!-- erster Eintrag: (keine) -> bewirkt SelectedItem = Nothing -->
                            <ComboBoxItem Content="{x:Null}">
                                <ComboBoxItem.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="(keine)" Foreground="Gray"/>
                                    </DataTemplate>
                                </ComboBoxItem.ContentTemplate>
                            </ComboBoxItem>
                            <!-- die eigentlichen Leistungsstufen aus der Window-Resource -->
                            <CollectionContainer Collection="{Binding Source={StaticResource LeistungsstufenListeSource}}"/>
                        </CompositeCollection>
                    </ComboBox.ItemsSource>
                </ComboBox>

                    <TextBox  Grid.Column="2" Grid.Row="6"
                              IsReadOnly="True" 
                              x:Name="GroupLeaderTextblock"  
                              Text="{Binding Trainer.VorNachname, Mode=OneWay}">
                        <!--Funktionsprüfung okay-->
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding DataContext.TrainerAusGruppeEntfernenCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                        <!--Funktionsprüfung okay-->
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Trainer entfernen"
                                          Command="{Binding Source={x:Static Application.Current}, Path=MainWindow.DataContext.TrainerAusGruppeEntfernenCommand}"/>
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>

                <Border  Grid.Column="2"   Grid.Row="5" BorderThickness="1"
                         HorizontalAlignment="left" Margin="3">
                    <Grid Height="Auto">
                        <Rectangle Fill="Transparent"/>
                        <Image Height="180" VerticalAlignment="Center" Source="/Images/icons8-trainer-96.png"  Opacity="0.3"
                               Visibility="{Binding Trainer.HatKeinFoto, Converter={StaticResource BooleanToVisibilityInverted}}"/>
                        <Image x:Name="FotoImage" Height="180"  Source="{Binding Trainer.Foto}" />
                    </Grid>
                    <Border.ContextMenu>
                        <ContextMenu>
                        <MenuItem Header="Trainer entfernen"
                                          Command="{Binding Source={x:Static Application.Current}, Path=MainWindow.DataContext.TrainerAusGruppeEntfernenCommand}"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>

                <DataGrid Grid.Column="2" Grid.Row="7" x:Name="MitgliederlisteDataGrid" 
                          IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          ItemsSource="{Binding Mitgliederliste}"
                          SelectedItem="{Binding SelectedTeilnehmer}"
                          SelectionUnit="FullRow"
                          IsReadOnly="True"
                          behaviors:DataGridMultiSelect.BindableSelectedItems="{Binding SelectedAlleMitglieder, RelativeSource={RelativeSource AncestorType=UserControl}}"                          
                          SelectionMode="Extended" >

                    <!--Funktionsprüfung okay-->
                    <i:Interaction.Behaviors>
                        <behaviors:DataGridRowDoubleClickBehavior 
                            Command="{Binding Path=DataContext.TeilnehmerAusGruppeEntfernenCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding SelectedAlleMitglieder, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </i:Interaction.Behaviors>

                    <!--Funktionsprüfung okay-->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Teilnehmer entfernen"
                                      Command="{Binding Source={x:Static Application.Current}, Path=MainWindow.DataContext.TeilnehmerAusGruppeEntfernenCommand}"
                                      CommandParameter="{Binding PlacementTarget.SelectedItems, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Nachname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Alter" Binding="{Binding Alter, Mode=OneWay}"/>
                        <DataGridTextColumn Header="StufeNr"  Binding="{Binding Leistungsstufe.Sortierung}" Width="Auto" />
                        <DataGridComboBoxColumn Header="Stufe" Width="*"
                                                SelectedValueBinding="{Binding LeistungsstufeID, Mode=TwoWay}" 
                                                SelectedValuePath="Ident" 
                                                DisplayMemberPath="Benennung">
                                                <!--ItemsSource="{Binding Source={StaticResource LeistungsstufenListeSource}}">-->
                            <DataGridComboBoxColumn.ItemsSource>
                                <CompositeCollection>
                                    <!-- erster Eintrag: (keine) -> bewirkt SelectedItem = Nothing -->
                                    <ComboBoxItem Content="{x:Null}">
                                        <ComboBoxItem.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="(keine)" Foreground="Gray"/>
                                            </DataTemplate>
                                        </ComboBoxItem.ContentTemplate>
                                    </ComboBoxItem>
                                    <CollectionContainer Collection="{Binding Source={StaticResource LeistungsstufenListeSource}}"/>
                                </CompositeCollection>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
