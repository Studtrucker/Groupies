<UserControl x:Class="UserControls.GruppendetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:rules="clr-namespace:Groupies.ValidationRules"
             xmlns:ViewModels="clr-namespace:Groupies.ViewModels"
             xmlns:Converters="clr-namespace:Groupies.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:cmd="clr-namespace:Groupies.Commands"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="LeistungsstufenProvider"
                            x:Name="LeistungsstufenProvider"
                            ObjectType="{x:Type ViewModels:MainViewModel}" 
                            MethodName="GetLeistungsstufen">
        </ObjectDataProvider>
    </UserControl.Resources>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding UserControlLoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border BorderBrush="Black" BorderThickness="1"  Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="DarkGray"/>
        </Border.Effect>
        <Grid x:Name="gridSkikursdetails" Background="white" Panel.ZIndex="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Detailangaben -->
            <Grid Grid.Row="1" Margin="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition MinHeight="250" Height="Auto"/>
                    <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="1" Grid.Row="1" Content="Sortierung" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="2" Content="Gruppenname" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="3" Content="LeistungsstufeID" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="4" Content="Leistungsstufe" Margin="2"/>
                <Label Grid.Column="1" Grid.Row="5" Content="Trainer" Margin="2"/>
                <StackPanel Grid.Column="1" Grid.Row="6">
                    <Label Grid.Column="1" Grid.Row="6" Content="Mitgliederliste" Margin="2"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Anzahl Mitglieder"/>
                        <Label Grid.Column="1" Content="{Binding Mitgliederliste.Count, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"  />
                    </Grid>
                </StackPanel>

                <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding Sortierung, UpdateSourceTrigger=PropertyChanged}"  />
                <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding Benennung, UpdateSourceTrigger=PropertyChanged}"  />
                <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding Leistungsstufe.LeistungsstufeID}"/>

                <ComboBox Grid.Column="2" Grid.Row="4" x:Name="GruppenleistungsstufeComboBox"
                          SelectedValue="{Binding Leistungsstufe.LeistungsstufeID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding LeistungsstufenListe}"
                          SelectedValuePath="LeistungsstufeID"
                          DisplayMemberPath="Benennung"/>
   
                <TextBox  Grid.Column="2" Grid.Row="5" x:Name="GroupLeaderTextblock"  
                          Text="{Binding Trainer.VorUndNachname}">
                    
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding TrainerEntfernen}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TrainerBearbeiten}" />
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TrainerAusGruppeEntfernen}" />
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>
                
                <DataGrid Grid.Column="2" Grid.Row="6" x:Name="MitgliederlisteDataGrid" 
                          IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" 
                          IsReadOnly="False" CanUserAddRows="False" 
                          ItemsSource="{Binding Mitgliederliste}" 
                          SelectionMode="Extended" >

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding TeilnehmerEntfernen}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TeilnehmerBearbeiten}" />
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.TeilnehmerAusGruppeEntfernen}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Nachname,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Alter" Binding="{Binding Alter, Mode=OneWay}"/>
                        <!--<DataGridTextColumn Header="Stufe"  Binding="{Binding Leistungsstand}" SortMemberPath="Leistungsstufe.Benennung" Width="*" />-->
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
