<UserControl x:Class="UserControls.LeistungsstufeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             mc:Ignorable="d"
             xmlns:cmd="clr-namespace:Groupies.Commands"
             Height="Auto" d:DesignWidth="400" Width="Auto">

    <Border BorderBrush="Black" BorderThickness="1"  Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="DarkGray"/>
        </Border.Effect>

        <Grid Background="white" Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Column="0" Grid.Row="1" Content="Sortierung" />
            <Label Grid.Column="0" Grid.Row="2" Content="Benennung" />
            <Label Grid.Column="0" Grid.Row="3" Content="Beschreibung" />
            <Label Grid.Column="0" Grid.Row="4" Content="Liste Fähigkeiten"/>
            
            <TextBox Text="{Binding Sortierung, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                     Grid.Column="1" Grid.Row="1" Width="50" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Benennung, UpdateSourceTrigger=PropertyChanged,ValidatesOnNotifyDataErrors=True}" 
                     Grid.Column="1" Grid.Row="2" />
            <TextBox Text="{Binding Beschreibung, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Column="1" Grid.Row="3" 
                     TextWrapping="Wrap" AcceptsReturn="True" />
            
            <DockPanel Grid.Column="1" Grid.Row="4">
                <DataGrid  x:Name="FaehigkeitenDataGrid"
                           AutoGenerateColumns="False" ItemsSource="{Binding Faehigkeiten}"
                           CanUserAddRows="True" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">
                    <DataGrid.ContextMenu>
                        
                        <ContextMenu>
                            <!--MenuItem implementiert das Interface 'ICommandSource'-->
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.FaehigkeitNeuErstellen}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nr" Binding="{Binding Sortierung}" />
                        <DataGridTextColumn Header="Fähigkeit" Binding="{Binding Benennung}" >
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextTrimming" Value="WordEllipsis"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextTrimming" Value="WordEllipsis"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
            
        </Grid>
    </Border>
</UserControl>
    