<UserControl x:Class="UserControls.LeistungsstufeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:rules="clr-namespace:Groupies.ValidationRules"
             mc:Ignorable="d"
             xmlns:cmd="clr-namespace:Groupies.Commands"
             Height="Auto" d:DesignWidth="400" Width="Auto">

    <UserControl.Resources>
        <Style TargetType="TextBox" x:Key="IntegerValidation">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=(Validation.HasError), RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="Black" BorderThickness="1"  Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" Color="DarkGray"/>
        </Border.Effect>

        <Grid Background="white" Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="1" >
                <TextBlock>Sortierung <Run Foreground="Red">*</Run></TextBlock>
            </Label>
            <Label Grid.Column="0" Grid.Row="2" >
                <TextBlock>Benennung <Run Foreground="Red">*</Run></TextBlock>
            </Label>
            <Label Grid.Column="0" Grid.Row="3" Content="Beschreibung" />
            <Label Grid.Column="0" Grid.Row="4" Content="Liste Fähigkeiten"/>

            <!--<TextBox Text="{Binding Sortierung, UpdateSourceTrigger=PropertyChanged,ValidatesOnExceptions=True,  NotifyOnValidationError=True, ValidatesOnDataErrors=True }" 
                     Grid.Column="1" Grid.Row="1" Width="50" HorizontalAlignment="Left"/>-->
            <TextBox Grid.Column="1" Grid.Row="1" Width="50" HorizontalAlignment="Left" Style="{StaticResource IntegerValidation}">
                <Binding Path="Sortierung" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <!--<NotifyDataErrorValidationRule/>-->
                        <rules:IntegerValidationRule/>
                        <rules:SortierungLeistungsstufeUniqueValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>


            <TextBox Text="{Binding Benennung, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True }" 
                     Grid.Column="1" Grid.Row="2" />
            <TextBox Text="{Binding Beschreibung, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Column="1" Grid.Row="3" 
                     TextWrapping="Wrap" AcceptsReturn="True" />
            
            <DockPanel Grid.Column="1" Grid.Row="4">
                <DataGrid  x:Name="FaehigkeitenDataGrid"
                           AutoGenerateColumns="False" ItemsSource="{Binding Faehigkeiten}"
                           CanUserAddRows="True" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">
                    <DataGrid.ContextMenu>
                        
                        <ContextMenu>
                            <!--MenuItem implementiert das Interface 'ICommandSource'-->
                            <MenuItem Command="{x:Static cmd:SkiclubCommands.FaehigkeitNeuErstellen}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nr" Binding="{Binding Sortierung}" />
                        <DataGridTextColumn Header="Fähigkeit" Binding="{Binding Benennung}" >
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextTrimming" Value="WordEllipsis"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextTrimming" Value="WordEllipsis"/>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
            
        </Grid>
    </Border>
</UserControl>
    