<UserControl x:Class="UserControls.PrintableNoticeForParticipants"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skiclub"
             xmlns:en="clr-namespace:Skiclub.Entities"
             xmlns:conv="clr-namespace:Skiclub.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="700">

    <DockPanel >
        <Grid DockPanel.Dock="Bottom" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Image x:Name="QRWeb" Margin="5" HorizontalAlignment="Center"
               Width="Auto" Height="65" Source="/Images/QRWebsiteSportKroen.png"/>
                <TextBlock Text="Website" HorizontalAlignment="Center" FontSize="10"/>
            </StackPanel>
            <Image x:Name="Logo" Margin="5"  HorizontalAlignment="Center" Grid.Column="1"
               Width="Auto" Height="60" Source="/Images/LogoKroen.png"/>

            <StackPanel Grid.Column="2">
                <Image x:Name="QRContact" Margin="5" HorizontalAlignment="Center"
               Width="Auto" Height="65" Source="/Images/QRKontaktSportKroen.png" />
                <TextBlock Text="Kontakt" HorizontalAlignment="Center" FontSize="10"/>
            </StackPanel>
        </Grid>

        <Grid DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Area Group Header-->
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Gruppe" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtSkigruppenname"  Style="{StaticResource BigCaptionValue}" />
        </DockPanel>

         <!--Area Instructor Header-->
       <DockPanel Grid.Row="1" Margin="5">
            <Image x:Name="imgSkilehrerfoto" Margin="5" Grid.Column="1" DockPanel.Dock="Right"
                   Width="Auto" Height="Auto" MaxWidth="200" MaxHeight="200"/>
            <TextBlock Text="Skilehrer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtSkilehrername"  Style="{StaticResource BigCaptionValue}"/>
        </DockPanel>
        

         <!--Area Participants-->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBlock Text="Teilnehmer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <DataGrid x:Name="lstMitglieder" Margin="5" BorderThickness="0" HeadersVisibility="None" AutoGenerateColumns="False"
                      GridLinesVisibility="None" DockPanel.Dock="Top"  Style="{StaticResource PrintoutInfo}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ParticipantFullName}" />
                </DataGrid.Columns>

            </DataGrid>
        </DockPanel>
    </Grid>

    </DockPanel>
</UserControl>
