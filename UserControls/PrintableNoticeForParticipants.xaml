<UserControl x:Class="UserControls.PrintableNoticeForParticipants"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skischule"
             xmlns:en="clr-namespace:Skischule.Entities"
             xmlns:conv="clr-namespace:Skischule.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="700">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Area Group Header-->
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Gruppe" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtSkigruppenname"  Style="{StaticResource BigCaptionValue}" />
        </DockPanel>

         <!--Area Instructor Header-->
       <DockPanel Grid.Row="1" Margin="5">
            <Image x:Name="imgSkilehrerfoto" Margin="5" Grid.Column="1" DockPanel.Dock="Right"
                   Width="Auto" Height="Auto" MaxWidth="200" MaxHeight="200"/>
            <TextBlock Text="Skilehrer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtSkilehrername"  Style="{StaticResource BigCaptionValue}"/>
        </DockPanel>
        

         <!--Area Participants-->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBlock Text="Teilnehmer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <DataGrid x:Name="lstMitglieder" Margin="5" BorderThickness="0" HeadersVisibility="None" AutoGenerateColumns="False"
                      GridLinesVisibility="None" DockPanel.Dock="Top"  Style="{StaticResource PrintoutInfo}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ParticipantFullName}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
