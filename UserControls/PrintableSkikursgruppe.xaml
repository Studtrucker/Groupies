<UserControl x:Class="UserControls.PrintableSkikursgruppe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skischule"
             mc:Ignorable="d" 
             d:DesignHeight="1090" d:DesignWidth="790">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtSkigruppenname" Grid.Column="0"
                   Grid.ColumnSpan="2" Margin="5" 
                   FontSize="48" FontWeight="Bold" />
        <Image x:Name="imgSkilehrerfoto" Width="160" Height="200" Grid.Row="1" Margin="5"  />
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Content="Skilehrer" FontSize="24" Margin="5" />
            <TextBlock x:Name="txtSkilehrername"  FontSize="36" Margin="5" />
        </StackPanel>
        <Label Grid.Column="1" Grid.Row="2" Content="Teilnehmer" FontSize="24" Margin="5" />
        <DataGrid x:Name="lstMitglieder" Grid.Row="3" Grid.Column="1" HeadersVisibility="None"  FontSize="36" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vorname" />
                <DataGridTextColumn Header="Name" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
