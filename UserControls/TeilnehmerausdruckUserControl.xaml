<UserControl x:Class="UserControls.TeilnehmerAusdruckUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:templ="clr-namespace:Groupies.TemplateSelectors"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="700">

    <DockPanel >
        <Grid DockPanel.Dock="Bottom" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="0" Height="100" >
                <Image x:Name="QRWebKroen" Canvas.Left="10" Canvas.Top="8"
                       Height="80" Source="/Images/QRWebsiteSportKroen.png" 
                       Visibility="Hidden"/>
                <Image x:Name="QRWebSSM" Canvas.Left="10" Canvas.Top="8"
                       Height="80" Source="/Images/QRWebsiteSkisportMeerbusch.png" 
                       Visibility="Visible"/>
                <TextBlock Text="Scan Me Web" FontSize="8" Canvas.Left="20" Canvas.Bottom="-3" />
            </Canvas>
            <Image x:Name="LogoKroen" Margin="5"  HorizontalAlignment="Center" Grid.Column="1"
                   Width="Auto" Height="60" Source="/Images/LogoKroen.png"
                   Visibility="Hidden"/>
            <Image x:Name="LogoSSM" Margin="5"  HorizontalAlignment="Center" Grid.Column="1"
                   Width="Auto" Height="100" Source="/Images/LogoSkisportMeerbusch.png"
                   Visibility="Visible"/>

            <Canvas Grid.Column="2" Height="100">
                <Image x:Name="QRContactKroen" Height="80" Canvas.Left="10" Canvas.Top="8"
                       Source="/Images/QRKontaktSportKroen.png" 
                       Visibility="Hidden"/>
                <Image x:Name="QRContactSSM" Height="80" Canvas.Left="10" Canvas.Top="8"
                       Source="/Images/QRKontaktSkisportMeerbusch.png"
                       Visibility="Visible"/>
                <TextBlock Text="Scan Me Kontakt"  FontSize="8" Canvas.Left="16" Canvas.Bottom="-3"/>
            </Canvas>
        </Grid>

        <Grid DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Area Group Header-->
        <DockPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Gruppe" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtAusgabeTeilnehmerinfo"  Style="{StaticResource BigCaptionValue}" />
        </DockPanel>

         <!--Area Instructor Header-->
       <DockPanel Grid.Row="1" Margin="5">
            <Image x:Name="imgTrainerFoto" Margin="5" Grid.Column="1" DockPanel.Dock="Right"
                   Width="Auto" Height="Auto" MaxWidth="200" MaxHeight="200"/>
            <TextBlock Text="Skilehrer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <TextBlock x:Name="txtTrainer"  Style="{StaticResource BigCaptionValue}"/>
        </DockPanel>
        

         <!--Area Participants-->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBlock Text="Teilnehmer" DockPanel.Dock="Top" Style="{StaticResource BigCaption}"/>
            <DataGrid x:Name="lstMitgliederliste" BorderThickness="0" HeadersVisibility="None" AutoGenerateColumns="False"
                      GridLinesVisibility="None" DockPanel.Dock="Top" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding AusgabeTeilnehmerinfo}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>  
        </Grid>
    </DockPanel>
</UserControl>
