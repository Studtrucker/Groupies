<UserControl x:Class="UserControls.TeilnehmerdetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:rules="clr-namespace:Groupies.ValidationRules"
             xmlns:convert="clr-namespace:Groupies.Converters"
             mc:Ignorable="d" 
             Width="600" Height="Auto">

    <UserControl.Resources>
        <convert:StringToLeistungsstufeConverter x:Key="StringToLeistungsstufeConverter"/>
    </UserControl.Resources>
    
    <UserControl.BindingGroup>
        <BindingGroup >
            <BindingGroup.ValidationRules >
                <rules:TeilnehmerValidationRule/>
            </BindingGroup.ValidationRules>
        </BindingGroup>
    </UserControl.BindingGroup>

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Style="{StaticResource RandRowDefinition}"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Style="{StaticResource RandRowDefinition}"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource PflichtangabeLabel}">
            <TextBlock>Vorname <Run Foreground="Red">*</Run></TextBlock>
        </Label>
        <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource PflichtangabeLabel}">
            <TextBlock>Nachname <Run Foreground="Red">*</Run></TextBlock>
        </Label>
        <Label Content="Geburtsdatum" Grid.Column="1" Grid.Row="3"/>
        <Label Grid.Column="1" Grid.Row="4" Style="{StaticResource PflichtangabeLabel}">
            <TextBlock>Leistungsstand <Run Foreground="Red">*</Run></TextBlock>
        </Label>

        <TextBox x:Name="VornameTextBox" Grid.Column="2" Grid.Row="1" 
                     Text="{Binding Vorname, UpdateSourceTrigger=Explicit}"/>
        <TextBox x:Name="NachnameTextBox" Grid.Column="2" Grid.Row="2"
                     Text="{Binding Nachname, UpdateSourceTrigger=Explicit}"/>

        <DatePicker x:Name="GeburtstagDatePicker" Grid.Row="3" Grid.Column="2" Width="200" HorizontalAlignment="Left"
                        SelectedDate="{Binding Geburtsdatum, UpdateSourceTrigger=Explicit}"/>

        <ComboBox Grid.Column="2" Grid.Row="4" IsSynchronizedWithCurrentItem="True"
                      x:Name="LeistungsstandComboBox"
                      SelectedValue="{Binding Leistungsstand, UpdateSourceTrigger=Explicit,Converter={StaticResource StringToLeistungsstufeConverter}}"/>

    </Grid>
    
</UserControl>
