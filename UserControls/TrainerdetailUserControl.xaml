<UserControl x:Class="UserControls.TrainerdetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             xmlns:convert="clr-namespace:Groupies.Converters"
             xmlns:valrules="clr-namespace:Groupies.ValidationRules"
             mc:Ignorable="d"
             Height="Auto" d:DesignWidth="400"  Width="Auto">
    
    <UserControl.Resources>
        <convert:InvertableBoolToVisibleConverter Inverted="True" x:Key="BooleanToVisibilityInverted"/>
    </UserControl.Resources>

        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            <RowDefinition Style="{StaticResource RandRowDefinition}"/>

        </Grid.RowDefinitions>

        <Border AllowDrop="True" Width="120" Height="180" Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" 
                VerticalAlignment="Top" Margin="2" 
                BorderBrush="Black" BorderThickness="1">
            <Grid>
                <!--<Rectangle Fill="{StaticResource DefaultImageBrush}"/>-->
                <Rectangle Fill="Transparent"/>
                <Image VerticalAlignment="Center" Source="/Images/icons8-trainer-96.png" 
                       Visibility="{Binding Path=HasPicture,Converter={StaticResource BooleanToVisibilityInverted}}"/>
                <TextBlock TextAlignment="Center" Foreground="red" HorizontalAlignment="Center" VerticalAlignment="Center"  
                           Visibility="{Binding Path=HasPicture,Converter={StaticResource BooleanToVisibilityInverted}}">
                    Bild per
                    <LineBreak/>
                    Drag'n'Drop 
                    <LineBreak/>
                    setzen
                </TextBlock>
                <Image Width="120" Height="180" Source="{Binding Foto}" 
                       Visibility="{Binding Path=HasPicture,Converter={StaticResource BooleanToVisibilityInverted}}"/>
            </Grid>
        </Border>

        <!--<Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="5"
                BorderThickness="1" BorderBrush="DarkGray"  
                MaxHeight="360" MaxWidth="240" >
            <Image Source="{Binding Foto, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/>
            </Border>-->
            <Label Grid.Column="2" Grid.Row="1" Content="Spitzname"/>
            <Label Grid.Column="2" Grid.Row="2" Content="Vorname"/>
            <Label Grid.Column="2" Grid.Row="3" Content="Nachname" />
            <Label Grid.Column="2" Grid.Row="4" Content="e-Mail" />
            
            <TextBox Grid.Column="3" Grid.Row="1" >
                <Binding Path="Spitzname" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <!--<valrules:TrainernameValidationRule/>-->
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox Text="{Binding Vorname, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="3" Grid.Row="2"  />
            <TextBox Text="{Binding Nachname, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="3" Grid.Row="3"  />
            <TextBox Text="{Binding eMail, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="3" Grid.Row="4" />

        </Grid>

</UserControl>
