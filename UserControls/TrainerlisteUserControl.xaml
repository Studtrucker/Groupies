<UserControl x:Class="UserControls.TrainerlisteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Groupies"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             Height="Auto" Width="300">
    <UserControl.Resources>
        <Style x:Key="groupiesDataGridRowStyle" TargetType="{x:Type DataGridRow}"/>
    </UserControl.Resources>


        <Grid>
            <DataGrid x:Name="TrainerDataGrid" ItemsSource="{Binding }"
                      SelectionMode="Extended"     AutoGenerateColumns="False"
                      Margin="4" IsReadOnly="True" IsSynchronizedWithCurrentItem="True"
                      HeadersVisibility="Column"
                      RowStyle="{StaticResource groupiesDataGridRowStyle}"   
                      ScrollViewer.CanContentScroll="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Vorname" Width="Auto" Binding="{Binding Vorname}"/>
                    <DataGridTextColumn Header="Name" Width="Auto" Binding="{Binding Nachname}"/>
                    <DataGridTextColumn Header="Alias" Width="*" Binding="{Binding [Alias]}"/>
               </DataGrid.Columns>
            </DataGrid>
        </Grid>
</UserControl>
