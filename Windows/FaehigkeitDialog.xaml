<Window x:Class="FaehigkeitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Groupies"
        xmlns:cmd="clr-namespace:Groupies.Commands"
        xmlns:rules="clr-namespace:Groupies.ValidationRules"
        mc:Ignorable="d"
        Title="Fähigkeitendialog" SizeToContent="Height" Width="600">

    <Window.BindingGroup>
        <BindingGroup >
            <BindingGroup.ValidationRules >
                <rules:FaehigkeitValidationRule/>
            </BindingGroup.ValidationRules>
        </BindingGroup>
    </Window.BindingGroup>

    <DockPanel>
        <!--Header-->
        <DockPanel DockPanel.Dock="Top">
            <Image Source="/Images/icons8-trophäe-48.png" 
                   Style="{StaticResource WindowImageCaption}" />
            <TextBlock Height="Auto" Text="Fähigkeit"
                       Style="{StaticResource WindowCaption}"/>
        </DockPanel>
        <!--OK- und Cancel-Button-->
        <Border DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="FehlerInfoLabel" Content="{Binding (Validation.ValidationAdornerSiteFor).(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" />
                <Button x:Name="OkButton" Width="110" Content="Übernehmen" Click="HandleOkButton"/>
                <Button x:Name="CancelButton" Width="110" Content="Verwerfen" Click="HandleCancelButton"/>
            </StackPanel>
        </Border>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Style="{StaticResource RandColumnDefinition}"/>
           
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Style="{StaticResource RandRowDefinition}"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock>Sortierung
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>
            <TextBox Text="{Binding Sortierung, UpdateSourceTrigger=Explicit}" 
                     Grid.Column="2" Grid.Row="1" Width="75" HorizontalAlignment="Left"
                     x:Name="SortierungTextBox"/>
            
            <Label Grid.Column="1" Grid.Row="2" Style="{StaticResource PflichtangabeLabel}">
                <TextBlock>Benennung
				<Run Foreground="Red">*</Run>
                </TextBlock>
            </Label>

            <TextBox Text="{Binding Benennung, UpdateSourceTrigger=Explicit}" 
                     Grid.Column="2" Grid.Row="2" x:Name="BenennungTextBox"/>
            <Label Content="Beschreibung" Grid.Column="1" Grid.Row="3"/>
            <TextBox Text="{Binding Beschreibung, UpdateSourceTrigger=Explicit}" 
                     Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" x:Name="BeschreibungTextBox"/>
        </Grid>
    </DockPanel>
</Window>
