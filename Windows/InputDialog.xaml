<Window x:Class="UserControls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suche" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="12">
        <TextBlock Text="Bitte den Suchnamen eingeben:" Margin="0,0,0,8"/>
        <TextBox MinWidth="300" Text="{Binding ResponseText, UpdateSourceTrigger=PropertyChanged}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" IsDefault="True" Width="100" Height="36" VerticalContentAlignment="Center" Click="Ok_Click"/>
            <Button Content="Abbrechen" IsCancel="True" Width="100" Height="36" VerticalContentAlignment="Center" Click="Cancel_Click" Margin="8,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
