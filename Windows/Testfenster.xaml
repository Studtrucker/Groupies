    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Liste der Kategorien -->
        <ListBox Grid.Row="0" ItemsSource="{Binding Einteilungen}" DisplayMemberPath="Benennung" 
                 SelectedItem="{Binding SelectedEinteilung}" Height="100" />

        <!-- Untergeordnete Liste der Subkategorien -->
        <ListBox Grid.Row="1" ItemsSource="{Binding SelectedEinteilung.Gruppenliste}" 
                 DisplayMemberPath="Benennung" SelectedItem="{Binding SelectedGruppe}" />

        <!-- Detailansicht -->
        <TextBlock Grid.Row="2" Text="{Binding SelectedGruppe.Trainer.Vorname}" Margin="10" />
    </Grid>


